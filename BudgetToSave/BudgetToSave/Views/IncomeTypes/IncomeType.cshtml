@model IEnumerable<BudgetToSave.Models.IncomeType>

@{
    ViewBag.Title = "IncomeType";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<p>
    
</p>
<link href="~/Content/YourMonthlySpending.css" rel="stylesheet" />
<h2 style="text-align:center;">Income Types</h2>
<section style="z-index:99;position:sticky">
    <div class="tbl-header" style="z-index:99;position:sticky">
        <table class="table" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th><input id="Button1" type="button" value="Create New" onclick="window.location.href = '@Url.Action("Create", "IncomeTypes")'" /> | <input id="Button1" type="button" value="Back to Create Income" onclick="window.location.href = '@Url.Action("Create", "Incomes")'" /></th>
            </tr>
        </table>
    </div>
    <div class="tbl-content" style="z-index:99;position:sticky">
        <table class="table" cellpadding="0" cellspacing="0" border="0">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IncomeTypeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IncomeTypeID })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>