@model BudgetToSave.Models.IncomeType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<link href="~/Content/BudgetLimits.css" rel="stylesheet" />
<section style="z-index:99;position:sticky">
    <h2>Delete IncomeType</h2>
    <div>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)
            </dt>
            <dt>
                @ViewBag.mess
            </dt>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <input id="Button1" type="button" value="Back To List" onclick="window.location.href = '@Url.Action("IncomeType", "IncomeTypes")'" />
            </div>
        }
    </div>
</section>