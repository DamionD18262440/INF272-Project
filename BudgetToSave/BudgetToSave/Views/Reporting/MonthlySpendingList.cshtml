@model IEnumerable<BudgetToSave.Models.MonthlySpending>

@{
    ViewBag.Title = "MonthlySpendingList";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

    <a href="~/Controllers/MonthlySpendingsController.cs">~/Controllers/MonthlySpendingsController.cs</a>
    @Html.ActionLink("Export PDF", "Reports", new { ReportType = "PDF" }) |
    <section style="z-index:99;position:sticky">
        <div class="tbl-header" style="z-index:99;position:sticky">
            <table class="table" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FoodAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClothesAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AlcoholAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OtherAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FoodAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClothesAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AlcoholAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OtherAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                    </tr>
                }

            </table>
            </div>
    </section>