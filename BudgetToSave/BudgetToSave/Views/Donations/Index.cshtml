@model IEnumerable<BudgetToSave.Models.Donation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}


<link href="~/Content/YourMonthlySpending.css" rel="stylesheet" />
<h2 style="text-align:center;">Donations Made</h2>
<section style="z-index:99;position:sticky">
    <div class="tbl-header" style="z-index:99;position:sticky">
        <table class="table" cellpadding="0" cellspacing="0" border="0">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Location
                </th>
                <th><input id="Button1" type="button" value="Add Donation" onclick="window.location.href = '@Url.Action("Create", "Donations")'" /></th>
            </tr>
        </table>
    </div>
    <div class="tbl-content" style="z-index:99;position:sticky">
        <table cellpadding="0" cellspacing="0" border="0">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LocationID)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DonationID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DonationID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <input id="Button1" type="button" value="Generate Donation Report " onclick="window.location.href = '@Url.Action("Donations", "Donations")'" />
    <input id="Button1" type="button" value="Back to Monthly Sopending " onclick="window.location.href = '@Url.Action("Index", "MonthlySpendings")'" />
</section>
