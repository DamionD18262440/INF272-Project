@model IEnumerable<BudgetToSave.Models.Donation>

@{
    ViewBag.Title = "Donations";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

    <link href="~/Content/YourMonthlySpending.css" rel="stylesheet" />

    <section style="z-index:99;position:sticky">
       
        <div class="tbl-header" style="z-index:99;position:sticky">
            <table class="table" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Location.Description)
                    </th>
                    <th>
                        @Html.ActionLink("Export PDF", "Reports2", new { ReportType = "PDF" }) | |
                        <input id="Button1" type="button" value="Cancel " onclick="window.location.href = '@Url.Action("Index", "Donations")'" />
                                    </th>
                </tr>
            </table>
        </div>
        <div class="tbl-content" style="z-index:99;position:sticky">
            <table cellpadding="0" cellspacing="0" border="0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Description)
                        </td>
                        <td>
                            
                        </td>

                    </tr>
                }

            </table>
        </div>
       
    </section>
