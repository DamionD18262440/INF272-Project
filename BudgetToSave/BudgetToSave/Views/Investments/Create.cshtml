@model BudgetToSave.Models.Investment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<link href="~/Content/BudgetLimits.css" rel="stylesheet" />
<section style="z-index:99;position:sticky">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="Register">
        <h2>Create New Investment</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Amount
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Number Of Years
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumOfYears, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.NumOfYears, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Final Amount
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalInvest, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TotalInvest, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Interest Rate
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Interest Period
            <br />
            <div class="col-md-10">
                @Html.DropDownList("InterestPeriodID", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.InterestPeriodID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Interest Type
            <br />
            <div class="col-md-10">
                @Html.DropDownList("InterestTypeID", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.InterestTypeID, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Investment Type
            <br />
            <div class="col-md-10">
                @Html.DropDownList("InvestmentTypeID", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.InvestmentTypeID, "", new { @class = "text-danger" })
                <a href="~/InvestmentTypes/InvestmentType">Edit</a>
            </div>
        </div>
        <br />
        <div class="form-group">
            Date
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" /> | <input id="Button1" type="button" value="Back To List" onclick="window.location.href = '@Url.Action("Investment", "Investments")'" />
            </div>
        </div>
    </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</section>
<style>
    input#Text {
        margin-left: auto;
        margin-right: auto;
    }
</style>