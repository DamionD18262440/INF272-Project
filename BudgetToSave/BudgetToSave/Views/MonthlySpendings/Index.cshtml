@model IEnumerable<BudgetToSave.Models.MonthlySpending>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}


<link href="~/Content/YourMonthlySpending.css" rel="stylesheet" />
<link href="~/Content/YourMonthlySpending.css" rel="stylesheet" />
<section style="z-index:99;position:sticky">
    <div class="tbl-header" style="z-index:99;position:sticky">
        <table cellpadding="0" cellspacing="0" border="0">
            @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary btn-large" })
            
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Food
                </th>
                <th>
                    Clothes
                </th>
                <th>
                    Alcohol
                </th>
                <th>
                    Other
                </th>

            </tr>
        </table>
    </div>
    <div class="tbl-content" style="z-index:99;position:sticky">
        <table cellpadding="0" cellspacing="0" border="0">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoodAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClothesAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlcoholAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OtherAmount)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MonthlySpendingID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MonthlySpendingID })
                    </td>
                </tr>
            }


        </table>
    </div>
</section>