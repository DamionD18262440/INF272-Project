@model BudgetToSave.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

</head>
<body>
    <link href="~/Content/BudgetLimits.css" rel="stylesheet" />
    <section style="z-index:99;position:sticky">
        @using (Html.BeginForm("Index", "Logins", FormMethod.Post))
        {
            <table border="0" cellpadding="0" cellspacing="0" style="margin-left:37%">
                <tr>
                    <th colspan="3">
                        Login
                    </th>
                </tr>
                <tr>
                    <td>
                        Username
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.UserUseName)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.UserUseName, "", new { @class = "error" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <br />
                        Password
                    </td>
                    <td>
                        @Html.PasswordFor(m => m.UserPassword)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "error" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Login" /> | <input id="Button1" type="button" value="Register" onclick="window.location.href = '@Url.Action("Index", "CreateUsers")'" />
                    </td>
                    <td></td>
                </tr>
            </table>
        }
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @if (@ViewBag.Message != null)
        {
            <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
            </script>
        }
    </section>
</body>
</html>

