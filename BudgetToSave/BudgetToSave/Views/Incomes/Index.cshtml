@model IEnumerable<BudgetToSave.Models.Income>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}
<link href="~/Content/NewStandardStyleSheet.css" rel="stylesheet" />
<h2>Index</h2>
<section>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncomeType.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IncomeType.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IncomeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IncomeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IncomeID })
                </td>
            </tr>
        }

    </table>
</section>
