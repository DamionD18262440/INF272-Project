@model BudgetToSave.Models.Income

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<h2>Delete</h2>
<link href="~/Content/BudgetLimits.css" rel="stylesheet" />
<section style="z-index:99;position:sticky">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Income</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Date: @Html.DisplayFor(model => model.Date)
            </dt>
            <dt>
                Amount: @Html.DisplayFor(model => model.Amount)
            </dt>
            <dt>
                Income Type: @Html.DisplayFor(model => model.IncomeType.Description)
                
            </dt>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <input id="Button1" type="button" value="Back To List" onclick="window.location.href = '@Url.Action("Income", "Incomes")'" />
            </div>
        }
    </div>
</section>