    <label>Food:</label>
    <input type="text" disabled class="text-line" /><br />
    <label>Clothes:</label>
    <input type="text" disabled class="text-line" /><br />
    <label>Alcohol:</label>
    <input type="text" disabled class="text-line" /><br />
    <label>Other:</label>
    <input type="text" disabled class="text-line" /><br />
    <button type="submit">Print ⎙</button>
</div>
</section>