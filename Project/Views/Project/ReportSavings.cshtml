
@{
    ViewBag.Title = "ReportSavings";
    Layout = "~/Views/Shared/StandardLayout.cshtml";
}

<link href="~/Content/report.css" rel="stylesheet" />
<section style="z-index:99;position:sticky">

<div class="report">
    <h3 style="text-align:center">Your Savings Report</h3>
    <label>You have <mark class="green">Saved</mark>/<mark class="red">Overspent</mark>:R </label>
    <input type="text" disabled class="text-line" /><br />
